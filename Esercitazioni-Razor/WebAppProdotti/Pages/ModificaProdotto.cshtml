@page
@model ModificaProdottoModel
@{
    ViewData["Title"] = "Modifica Prodotto";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <br>
    <p><b>Nome:</b> @Model.Prodotto.Nome</p>
    <div class="form-group">
        <input type="hidden" class="form-control" name="nome" value="@Model.Prodotto.Nome">
    </div>
    <div class="form-group">
        <label for="prezzo">Prezzo</label>
        <input type="text" class="form-control" name="prezzo" value="@Model.Prodotto.Prezzo">
    </div>
    <div class="form-group">
        <label for="dettaglio">Dettaglio</label>
        <input type="text" class="form-control" name="dettaglio" value="@Model.Prodotto.Dettaglio">
    </div>
    <br>
    <button type="submit" class="btn btn-success">Salva</button>
    <a asp-page="Prodotti" class="btn btn-dark">annulla</a>

</form>