@page
@model ProdottoDettaglioModel
@{
    ViewData["Title"] = "Prodotto Dettaglio";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Prodotto.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prodotto.Prezzo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prodotto.Dettaglio)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Model.Prodotto.Nome
            </td>
            <td>
                @Model.Prodotto.Prezzo
            </td>
            <td>
                @Model.Prodotto.Dettaglio
            </td>
        </tr>
        <a asp-page="/Prodotti">torna ai Prodotti</a>
    </tbody>

</table>

<form method="post">
    <div class="form-group">
        <label for="prezzo">prezzo</label>
        <input type="text" class="form-control container" name="prezzo">
        <br>
        <button type="submit" class="btn btn-danger">modifica</button>
    </div>
</form>