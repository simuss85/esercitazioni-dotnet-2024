@page
@model EliminaImmagineModel
@{
    ViewData["Title"] = "Elimina Immagine";

}
<div class="mx-5">
    <div class="text-center">
        <h1 class="display-4">@ViewData["Title"]</h1>
    </div>


    <div class="container mt-5">
        <h2>Vuoi eliminare le immagini?</h2>
        <div class="row text-center mt-5">
            @foreach (var id in Model.Selezione)
            {

                <div class="col-12 col-sm-6 col-lg-4 align-items-center p-0 m-0 mb-3 px-3">
                    <div class="img-categoria rounded"
                        style="background-image: url(@Model.Immagini.First(i => i.Id == id).Path);">

                    </div>
                </div>
            }
        </div>
        <div class="d-flex flex-row">
            <form method="post">
                <button type="submit" class="btn btn-danger">Elimina</button>

            </form>

            <a class="btn btn-primary" asp-page="/GestisciImmagini">Annulla</a>
        </div>
    </div>
</div>